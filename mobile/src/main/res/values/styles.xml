<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/TomagatchiActionBar</item>
        <item name="actionBarStyle">@style/TomagatchiActionBar</item>
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:statusBarColor">@color/darker_yellow</item>
        <item name="android:homeAsUpIndicator">@drawable/btn_back</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TomagatchiActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/yellow</item>
        <item name="background">@color/yellow</item>
        <item name="logo">@drawable/text_title_bar_tamawatchi</item>
        <item name="android:logo">@drawable/text_title_bar_tamawatchi</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="PetDetailItemTitle">
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_default_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey_text</item>
    </style>
    <style name="PetDetailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/darker_detail_text</item>
    </style>
    <style name="PetDetailDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/quarter_default_margin</item>
        <item name="android:layout_marginBottom">@dimen/quarter_default_margin</item>
        <item name="android:background">@color/darker_detail_text</item>
    </style>


</resources>
